font-family-base = 'Avenir'

font-preset = {
  'oversized': (300 96px 1.3),
  'subtitle': (800 15px 1.3 0.2em),
  'h1': (300 36px 1.3),
  'h2-title': (400 24px 1.3),
  'h2-bold': (800 24px 1.3),
  'h3-title': (400 18px 1.3),
  'h3-bold': (800 18px 1.3),
  'h4': (500 16px 1.3),
  'h4-bold': (800 16px 1.3),
  'body': (400 16px 1.3),
  'body-bold': (800 16px 1.3),
  'small-text': (400 14px 1.3),
  'input-label': (800 11px normal),
}


font-base(weight, size, line-height, letter-spacing)
  font-family: font-family-base
  if weight
    font-weight: weight
  if size
    font-size: size
  if line-height
    line-height: line-height
  if letter-spacing
    letter-spacing: letter-spacing

font(presetName, override-weight=false, override-size=false, override-line-height=false)
  preset = font-preset[presetName]
  weight = preset[0]
  if override-weight
    weight = override-weight

  size = preset[1]
  if override-size
    size = override-size

  line-height = preset[2]
  if override-line-height
    line-height = override-line-height

  font-base(weight, size, line-height, preset[3])
