@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.gem-dropdown-content
  box-sizing: border-box
  position relative

  width: 100%
  height: 30px
  padding-bottom 10px

  font(body, false, false, 20px)
  color: color-text-dark
  border-bottom: 1px solid color-primary-blue

  transition: all 0.2s ease-out;

  &:after
    position: absolute
    content: ''
    right: 0
    top: calc(50% - 8px)
    width: 12px
    height: 16px
    background-color: transparent;
    background-position: center;
    background-origin: border-box
    background-repeat: no-repeat
    background-image: url("~@expandorg/uikit/assets/arrow-down.svg")

  &-label
    transition-property: transform font-size color;
    color: color-text-dark
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
    transform-origin: left center;
    white-space: nowrap;

  &-val
    color: color-text-blue

    .gem-dropdown-content-label
      position: absolute;
      top: -15px
      padding: 0
      pointer-events: none;
      color: color-primary-blue
      font-size: 11px
