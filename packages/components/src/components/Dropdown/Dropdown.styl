@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/colors'

.gem-dropdown
  box-sizing: border-box
  position: relative
  cursor: pointer

  &-select
    box-sizing: border-box

    width: 99%
    height: 100%
    border: none

    cursor: pointer
    background-color: transparent
    z-index: 1
    outline: none
    appearance: none

  &-disabled
    .gem-dropdown-select
      cursor: default

  &-hidden
    position: absolute
    top: 0
    left: 0
    width: 100%

    opacity: 0
