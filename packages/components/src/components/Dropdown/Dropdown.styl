@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';


theme(thm)
  .gem-dropdown-theme-{thm} &
    {block}


.gem-dropdown-content
  box-sizing: border-box
  position relative

  width: 100%
  height: 48px
  padding 18px 0 0 0

  font(body, false, false, 22px)
  color: color-blue-background
  border-bottom: 2px solid color-heavy-blue
  transition: all 0.2s ease-out;

  +theme('white')
    color color-white
    border-bottom-color: color-white

  .gem-input-label:before
    +theme('white')
      color color-white

  &-val
    border-bottom-color: color-primary-blue

    .gem-input-label:before
      transform: translateY(-18px)
      font-size: 11px
      font-weight: 700
      color: color-primary-blue

      +theme('white')
        color color-white

.gem-dropdown-arrow
  position absolute
  right: 0
  top: calc(28px);

  path
    fill color-heavy-blue

    +theme('white')
      fill color-white
