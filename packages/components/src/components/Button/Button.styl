@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-button
  box-sizing: border-box;

  padding: 0 40px
  min-width: 150px;
  height: 50px;

  font(subtitle)

  text-align: center;
  text-transform: uppercase;

  color: color-white;

  background-color: color-pink;
  border-radius: 5px;

  outline: 0
  cursor: pointer;
  border: none;

  &:hover
    background-color: lighten(color-pink, 10%)

  &-small
    height 40px
    line-height: 38px
    border-radius: 2px

  &-link
    background-color: transparent
    color: color-pink;
    border: none

    &:hover
      border: none
      background-color: transparent
      color: lighten(color-pink, 30%)


  &-secondary
    background-color: transparent
    border: 1px solid color-pink
    color: color-pink;

    &:hover
      background-color: transparent
      color: lighten(color-pink, 30%)
      border-color: lighten(color-pink, 30%)

  &-aqua
    border: 1px solid color-teel-dark;
    background-color: color-teel-light;
    color: color-text-teel-dark;

    &:hover
      background-color: lighten(color-teel-light, 15%);

  &-grey
    color: color-text-grey
    background-color: color-grey-background

    &:hover
      background-color: lighten(color-grey-background, 10%);


  &-blue
    color: color-text-blue;
    background-color: color-medium-blue
    border: 1px solid color-heavy-blue

    &:hover
      background-color: lighten(color-medium-blue, 20%)


  &-white-blue
    color: color-text-blue;
    background-color: transparent

    border: 1px solid color-heavy-blue

    &:hover
      background-color: transparent
      border-color: lighten(color-heavy-blue, 10%)
      color: lighten(color-text-blue, 10%)




