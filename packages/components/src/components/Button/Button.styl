@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-button
  box-sizing: border-box;

  padding: 0 0
  width: 150px;
  height: 60px;

  font(subtitle)

  text-align: center;
  text-transform: uppercase;

  color: color-white;

  background-color: color-pink;
  border-radius: 5px;

  outline: 0
  cursor: pointer;

  &:hover
    background-color: lighten(color-pink, 10%)


  &-link
    background-color: transparent
    color: color-pink;

    &:hover
      background-color: transparent
      color: lighten(color-pink, 10%)


  &-secondary
    background-color: transparent
    border: 1px solid color-pink
    color: color-pink;

    &:hover
      background-color: transparent
      color: lighten(color-pink, 10%)
      border-color: lighten(color-pink, 10%)

  &-aqua
    border: 1px solid color-teel-dark;
    background-color: color-teel-light;
    color: color-text-teel-dark;

    &:hover
      background-color: lighten(color-teel-light, 10%);

  &-grey
    color: color-text-grey
    background-color: color-grey-background

    &:hover
      background-color: lighten(color-grey-background, 10%);
