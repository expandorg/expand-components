@import '~@expandorg/uikit/colors'

.gem-switch
  position: relative
  box-sizing: border-box;
  position: relative;
  display: inline-block;
  width: 55px
  height: 30px
  border-radius: 15px

  border: 1px solid color-heavy-blue
  background-color: color-light-blue

  cursor: pointer

  &-input
    width: 0;
    height: 0;
    overflow: hidden;
    opacity: 0;

  &-thumb
    box-sizing: border-box
    position: absolute;
    top: calc(50% - 10px)

    width: 20px;
    height: 20px;

    cursor: pointer;
    border-radius: 50%;

    transition-property: left, background-color, border-color
    transition-duration: 0.28s
    transition-timing-function: ease-in-out;

    .gem-switch-container-on &
      left: calc(100% - 25px)
      border: 1px solid color-primary-blue
      background-color: color-primary-blue

    .gem-switch-container-off &
      left: 5px
      border: 1px solid color-heavy-blue
      background-color: color-medium-blue
