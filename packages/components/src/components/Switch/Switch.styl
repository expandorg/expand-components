@import '~@gemsorg/uikit/colors'

.gem-switch
  position: relative
  display: inline-block
  height: auto
  white-space: nowrap
  vertical-align: middle

  &-input
    width: 0;
    height: 0;
    overflow: hidden;
    opacity: 0;

  &-container
    position: relative;
    display: inline-block;
    width: 34px
    height: 14px
    margin-top: 3px
    vertical-align: top
    cursor: pointer
    border-radius: 14px

    &-on
      background: color-blue

    &-off
      background: rgba(34, 31, 31, 0.26)

  &-thumb
    box-sizing: border-box
    position: absolute;
    top: -3px;
    width: 20px;
    height: 20px;

    cursor: pointer;
    border-radius: 50%;

    transition-property: left, background-color
    transition-duration: 0.28s
    transition-timing-function: ease-in-out;
    box-shadow 0 1px 1px 0 rgba(0, 0, 0, 0.24), 0 0 1px 0 rgba(0, 0, 0, 0.12)

    .gem-switch-container-on &
      left: 34px - 20px + 3px
      background-color: color-pink


    .gem-switch-container-off &
      left: 0 - 3px
      background-color: #f1f1f1
