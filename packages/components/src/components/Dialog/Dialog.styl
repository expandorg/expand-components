@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font'

.gem-dialog
  &-overlay
    position: fixed;
    top 0
    left 0
    right 0
    bottom 0
    z-index: 2

    background-color: rgba(102, 167, 239, 0.9)

    display: flex;
    align-items: center;
    justify-content: center;

    @media(max-width: 660px)
      align-items: stretch;

  &-modal
    position: relative;
    box-sizing: border-box;

    box-shadow: dialog-shadow

    border-radius: 4px;
    background-color: color-white

    max-height: 100vh;
    overflow-y: auto;
    outline: none

    @media(max-width: 660px)
      width: 100%

  &-close
    position: absolute;
    top 23px
    right 23px
    width 16px
    height 16px
    line-height: 16px
    font-size: 14px

    border-radius: 0
    background: none
    color: #cacaca
    outline: none;
    cursor: pointer;

    &:hover
      color: darken(#cacaca, 20%);
