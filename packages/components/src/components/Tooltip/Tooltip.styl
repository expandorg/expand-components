@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-tooltip
  position: absolute
  box-sizing: border-box
  padding: 16px 18px;

  background-color: color-white
  color: color-blue-background
  font(h4)
  letter-spacing: 0
  font-style: normal

  box-shadow: heavy-shadow

  border-radius: 3px
  z-index: 2
  white-space: nowrap;

  &-position

    &-right
      right: 0

      &:after
        right: 8px

    &-left
      left: 0

      &:after
        left: 8px

    &-center
      left: 50%

      transform: translateX(-50%)

      &:after
        left: calc(50% - 8px)

  &-orientation
    &-top
      bottom: 40px

      &:after
        position: absolute
        content: ''

        bottom: -15px
        border: 8px solid transparent
        border-top: 8px solid color-white

    &-bottom
      top: 40px

      &:after
        position: absolute
        content: ''

        top: -15px
        border: 8px solid transparent
        border-bottom: 8px solid color-white


    &-right
      top: calc(50% - 24px)
      left: calc(100% + 10px)

      &:after
        position: absolute
        content: ''

        left: -15px
        border: 8px solid transparent
        border-right: 8px solid color-white
