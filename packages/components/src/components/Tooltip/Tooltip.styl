@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-tooltip
  position: absolute
  box-sizing: border-box
  padding: 16px 18px;

  background-color: color-white
  color: color-blue-background

  font(h4)
  letter-spacing: 0
  text-align: left
  font-style: normal

  box-shadow: heavy-shadow

  border-radius: 3px
  z-index: 2
  white-space: nowrap;

  &:after
    position: absolute
    content: ''

    border: 8px solid transparent


  &-orientation
    &-top
      bottom: calc(100% + 8px)

      &:after
        bottom: -15px
        border-top: 8px solid color-white

    &-bottom
      top: calc(100% + 8px)

      &:after
        top: -15px
        border-bottom: 8px solid color-white


    &-right
      left: calc(100% + 8px)

      &:after
        left: -15px
        border-right: 8px solid color-white

  &-position

    &-right
      right: 0

      &:after
        right: 8px

    &-left
      left: 0

      &:after
        left: 8px

    &-center
      &.gem-tooltip-orientation-top
      &.gem-tooltip-orientation-bottom
        left: 50%
        transform: translateX(-50%)

        &:after
          left: calc(50% - 8px)

      &.gem-tooltip-orientation-right
        top: 50%
        transform: translateY(-50%)

        &:after
          top: calc(50% - 8px)

    &-top
      top: 0

      &:after
        top: 8px

    &-bottom
      bottom: 0

      &:after
        bottom: 8px
