@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-table
  box-sizing: border-box
  border-collapse: collapse

  &-scroll
    display: flex;
    justify-content: center;
    box-sizing: border-box
    padding: 0 15px

    &-inner
      max-width: 100%
      overflow: scroll;

  &-header
    background-color: color-light-blue

    &-cell
      text-align: center
      font(h3-bold)

      color: color-text-dark
      border: 1px solid color-heavy-blue

  &-cell
    width 240px
    max-width 240px
    box-sizing: border-box
    padding-left: 20px

    height 50px
    font(body)
    color: color-text-dark
    border: 1px solid color-heavy-blue
