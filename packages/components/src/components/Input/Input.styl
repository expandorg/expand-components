@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

theme(thm)
  .gem-input-theme-{thm} &
    {block}

error(thm)
  .gem-input-theme-{thm}.gem-input-error &
    {block}

.gem-input
  &-container
    box-sizing: border-box
    display: inline-block;
    position relative
    width: 100%

.gem-input
  box-sizing: border-box
  width: 100%

  transition: all 0.2s ease-out;

  font(body, false, false, 22px)
  height 56px
  padding: 10px 0 0 16px

  background-color: transparent

  outline: none;
  resize: none;

  +theme('default')
    border-top-left-radius: 5px
    border-top-right-radius: 5px

    color: color-text-dark
    background-color: color-light-blue
    border-bottom: 1px solid color-heavy-blue

    &:focus
      border-bottom-color color-primary-blue

    &-label
      left: 16px
      &:before
        color: #558098;

  +error('default')
    background-color: color-yellow-light-bg
    color: color-text-yellow-2
    border-bottom-color: #FBBC05

    &-label
      left: 16px
      &:before
        color: color-text-yellow-2;

  +theme('white')
    padding-left: 0
    color: color-white
    border-bottom: 1px solid  color-white

    &-label
      top: 22px
      &:before
        color color-white

  &:focus,
  &:active,
  &.gem-input-filled
    & + .gem-input-label:before
      font-size: 11px
      font-weight: 700
      transform: translateY(-14px)

      +theme('default')
        color: color-primary-blue

      +error('default')
        color: color-text-yellow-2;

      +theme('white')
        transform: translateY(-20px)
        color color-white


  &:-webkit-autofill
    transition: background-color 5000s ease-in-out 0s
    &:hover, &:focus, &:active
      transition: background-color 5000s ease-in-out 0s

