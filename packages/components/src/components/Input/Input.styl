@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

theme(thm)
  .gem-input-theme-{thm} &
    {block}

.gem-input-container
  box-sizing: border-box
  display: inline-block;
  position relative

  width: 100%
  height 48px
  padding-top: 16px

.gem-input
  box-sizing: border-box

  width: 100%
  height 32px
  padding: 0 0 10px 0

  font(body, false, false, 22px)

  color: color-blue-background
  background-color: transparent
  border-bottom: 2px solid  color-heavy-blue
  transition: all 0.2s ease-out;

  outline: none;
  resize: none;

  +theme('white')
    border-bottom-color color-white
    color: color-white

  &:focus
    border-bottom-color color-primary-blue

    +theme('white')
      border-bottom-color color-white

  .gem-input-error &
    border-bottom-color: color-yellow

    &:focus
      border-bottom-color color-yellow

  &-label:before
    +theme('white')
      color color-white

  &:focus,
  &:active,
  &.gem-input-filled
    & + .gem-input-label:before
      transform: translateY(-18px)
      font-size: 11px
      font-weight: 700
      color: color-primary-blue

      +theme('white')
        color color-white

  &:-webkit-autofill
    transition: background-color 5000s ease-in-out 0s
    &:hover, &:focus, &:active
      transition: background-color 5000s ease-in-out 0s
