@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-input
  box-sizing: content-box

  font(body, false, false, normal)

  height: 22px;
  width: calc(100% - 10px)

  padding: 0 15px 8px 0

  background-color: transparent
  color: color-blue-background
  border: 1px solid transparent
  border-bottom: 2px solid  color-heavy-blue

  transition: all 0.2s ease-out;

  outline: none;
  resize: none;

  &:focus
    border-bottom-color color-primary-blue

  .gem-input-error &
    border-bottom-color: color-yellow

    &:focus
      border-bottom-color color-yellow


  &:-webkit-autofill
    transition: background-color 5000s ease-in-out 0s
    &:hover, &:focus, &:active
      transition: background-color 5000s ease-in-out 0s

  & + .gem-input-label
    font(body, false, false, 40px)
    display: block;
    margin-top: -40px;
    padding: 0
    pointer-events: none;

    &:before
      content: attr(placeholder);
      display: block;
      color: color-text-grey
      white-space: nowrap;

      transition-property: transform font-size font-weight color;
      transition-duration: 0.2s;
      transition-timing-function: ease-out;
      transform-origin: left center;

  &-container
    display: inline-block;
    width: 100%

  &:focus,
  &.active,
  &.gem-input-filled
    & + .gem-input-label:before
      transform: translateY(-22px)
      font-size: 11px
      font-weight: 800
      color: color-primary-blue
