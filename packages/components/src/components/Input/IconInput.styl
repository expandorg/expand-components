@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

error()
  .gem-input-error &
    {block}

.gem-iconinput

  .gem-input
    padding-right: 40px

  &-copy
    box-sizing: border-box

    font(subtitle, 800)
    text-transform: uppercase

    color: color-primary-blue
    background-color: transparent
    border: 0

    outline: none
    cursor pointer

    +error()
      color: color-text-yellow-2

