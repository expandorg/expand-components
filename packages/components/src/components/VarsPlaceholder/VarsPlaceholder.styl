@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-varsplaceholder
  box-sizing: border-box
  position absolute
  left: -2px
  top: -2px
  right: -2px
  bottom: -2px

  display: flex;
  align-items: center;
  justify-content: center

  background-color: #E1F2EF;
  color: #25796A;

  border: 1px solid #34A893;
  border-radius: 5px;

  font(subtitle, false, 10px, 1)
  text-transform: uppercase;
  text-align: center

  &__inline
    left: 50%
    top: 50%
    padding: 5px 20px

    bottom: auto
    right: auto

    transform: translate(-50%, -50%)



