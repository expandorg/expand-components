@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-varsplaceholder
  box-sizing: border-box
  position absolute

  display: flex;
  align-items: center;
  justify-content: center

  background-color: #E1F2EF;
  color: #25796A;

  border: 1px solid #34A893;
  border-radius: 5px;

  white-space nowrap
  font(subtitle, false, 10px, 1)
  text-transform: uppercase;
  text-align: center

  &__fill
    left: -2px
    top: -2px
    right: -2px
    bottom: -2px

  &__center
    left: 50%
    top: 50%
    padding: 5px 20px
    bottom: auto
    right: auto
    transform: translate(-50%, -50%)

  &__left
    left: 0
    top: 0
    padding: 5px 20px
    bottom: auto
    right: auto
