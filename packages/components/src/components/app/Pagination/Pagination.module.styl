@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.page
  box-sizing: border-box;

  width: 50px
  height: 50px

  padding: 0

  font(subtitle, false, false, 48px)
  text-align: center;
  letter-spacing: 0.15em;
  text-transform: uppercase;

  border: 1px solid color-text-heavy-blue
  border-radius: 5px;

  background-color: color-white
  color: color-text-heavy-blue

  outline: none;
  cursor pointer

  margin-right: 11px

  path
    fill color-text-heavy-blue

  svg
    &:last-child
      margin-left: -6px

  &:last-child
    margin-right: 0

  &:hover
    background-color: color-blue-background
    color: color-white
    border-color: color-blue-background

    path
      fill color-white

  &.disabled:hover
    cursor: default
    background-color: color-white
    color: color-text-heavy-blue
    border-color: color-text-heavy-blue

    path
      fill color-text-heavy-blue

.active
  background-color: color-blue-background
  color: color-white
  border-color: color-blue-background


.left
  transform: rotate(-90deg)

.right
  transform: rotate(90deg)
