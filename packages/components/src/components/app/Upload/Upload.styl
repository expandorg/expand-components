@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.gem-dropzone
  display: flex;
  align-items: center;
  justify-content: center;
  position relative

  box-sizing: border-box;

  margin-top: 10px;

  height: 160px;
  width: 100%

  background-color: color-light-blue
  border-radius: 5px;
  border: 2px dashed color-heavy-blue;

  cursor: pointer;
  outline: none;

  input
    outline: none;


  &--uploading
    border-color: transparent;

