@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-joblogo
  box-sizing: border-box;
  display block
  border-radius: 5px;

  &-medium
    width: 60px
    height: 60px
    min-width: 60px
    min-height: 60px
    max-height: 60px
    max-width: 60px

    font(h2-bold, false, false, 58px)

  &-large
    width: 100px
    height: 100px
    min-width: 100px
    min-height: 100px
    max-height: 100px
    max-width: 100px

    font(h2-bold, false, false, 98px)

  &-text
    color: color-teel-dark
    background-color: alpha(color-teel-dark, 0.25)
    border: 1px solid color-teel-dark
    text-transform: uppercase
    text-align: center

