@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.gem-sidebar
  position: fixed
  top: sz-navbar-height
  left: 0

  box-sizing: border-box;

  width: sz-sidebar-width
  height: 100vh

  background-color: color-blue-background
  z-index: 2

  @media(max-width: breakpoint-mobile-sm)
    height: sz-sidebar-height
    width: 100%
    top: auto
    bottom: 0

    display: flex
    justify-content: space-around
