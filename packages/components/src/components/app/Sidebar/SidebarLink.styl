@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.gem-sidebar-link
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;

  box-sizing: border-box;
  height: sz-sidebar-height
  width: 100%

  color: color-white;

  font(h4, false, 9px, 12px)

  letter-spacing: 0.15em;
  text-transform: uppercase;
  text-decoration: none;

  border-left: 3px solid transparent
  border-right: 3px solid transparent

  outline: 0

  &:hover
    border-left-color: color-primary-blue


  @media(max-width: breakpoint-mobile-sm)
    border-left: none
    border-right: none

    border-top: 3px solid transparent
    border-bottom: 3px solid transparent

    &:hover
      border-bottom-color: color-primary-blue


  &-active
    background-color: color-primary-blue



  &-icon
    margin-bottom: 10px;
    height 18px
    width: 18px

    path
      fill: color-white
