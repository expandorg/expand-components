@import '~@expandorg/uikit/layout'
@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/size'

.gem-page
  box-sizing: border-box;
  min-height: 100vh;

.gem-content
  position: relative;
  box-sizing: border-box;

  background-color: color-white
  min-height: 100vh

  &__sidebar
    padding-left: sz-navbar-height

    @media(max-width: breakpoint-mobile-sm)
      padding-left: 0
      padding-bottom: sz-sidebar-height

      height 100vh
      overflow: auto

  &__navbar
    padding-top: sz-sidebar-width

