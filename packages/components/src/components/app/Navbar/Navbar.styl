@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.gem-navbar
  box-sizing: border-box;

  display: flex;
  align-items: center;
  justify-content: flex-start

  height: sz-navbar-height
  padding-left: 20px

  &__light
    background-color: color-white;

  &__dark
    background-color: transparent;

  &__top
    position: fixed;
    top: 0
    left: 0
    right: 0

    box-shadow: light-shadow;

    z-index: 2

  &-logo
    display: inline-block;
    height: 100%;
    width: 33px
    height: 33px

    margin-right: 20px

    &:hover
      path
        fill: darken(#FF7092, 10%)

  &-title
    font(h2-title, false, false, 1)

    .gem-navbar__light &
      color: color-text-dark

    .gem-navbar__dark &
      color: color-light-blue

  &-content
    height: 100%;
    display: flex;
    align-items: center;
    flex-grow: 1
