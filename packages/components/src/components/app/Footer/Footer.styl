@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.gem-footer
  box-sizing: border-box

  width: 100%
  height sz-footer-height

  display flex
  justify-content: center
  align-items: center
  flex-wrap: wrap

  background-color: rgba(229, 229, 229, 0.25);
  padding: 0 20px

  &-link
    box-sizing: border-box
    margin: 0 12px

    font(body, false, 14px, 19px)
    white-space nowrap
    text-decoration: none

    color: color-text-grey
    outline: 0

    &:hover
      color: lighten(color-text-grey, 30%)

    &:first-child
      margin-left: 0

    &:last-child
      margin-right: 0
