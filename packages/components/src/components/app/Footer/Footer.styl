@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.gem-footer
  box-sizing: border-box

  width: 100%
  height sz-footer-height

  display flex
  justify-content: center
  align-items: center
  flex-wrap: wrap

  padding: 0 20px 20px 20px

  &-link
    box-sizing: border-box
    margin: 0 12px

    font(body, false, 14px, 19px)
    white-space nowrap
    text-decoration: none

    color: color-text-heavy-blue
    outline: 0

    &:first-child
      margin-left: 0

    &:last-child
      margin-right: 0
