@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/colors'

.container
  box-sizing: border-box;
  padding: 0 20px

.header
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;

  height: 72px

.value
  color: color-text-dark
  font(h3-title)

.ampm
  box-sizing: border-box;
  height: 55px

  display: flex;
  align-items: center;
  justify-content: space-between;

  padding: 0 7px

.btn
  box-sizing: border-box;

  font(h4)

  color: color-text-grey
  background-color: transparent

  outline: none;
  cursor: pointer;

.selected
  font-weight: 800
  color: color-text-blue
