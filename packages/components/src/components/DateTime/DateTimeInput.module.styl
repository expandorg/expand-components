@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/colors'

theme-white()
  :global(.gem-dateinput-theme-white) &
    {block}

.container
  box-sizing: border-box
  display: inline-block;
  position relative

  width: 100%
  height 48px
  padding-top: 16px

.input
  box-sizing: border-box

  width: 100%
  height 32px
  padding: 0 0 10px 0

  font(body, false, false, 22px)

  color: color-blue-background
  background-color: transparent
  border-bottom: 2px solid  color-heavy-blue

  transition: all 0.2s ease-out;
  cursor: text;

  +theme-white()
    border-bottom-color color-white
    color: color-white

 &.error
  border-bottom-color: color-yellow

  &:focus
    border-bottom-color color-yellow


&.filled
  & + :global(.gem-input-label):before
    transform: translateY(-18px)
    font-size: 11px
    font-weight: 700
    color: color-primary-blue

    +theme-white()
      color color-white

.picker
  position: absolute;
  left: 0
  bottom: 0

  z-index: 3
