@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/colors'

theme(thm)
  :global(.gem-dateinput-theme-{thm}) &
    {block}

.container
  box-sizing: border-box
  display: inline-block;
  position relative

  width: 100%

  :global(.gem-input-label)
    left: 16px
    &:before
      color: #558098;

.input
  box-sizing: border-box
  width: 100%

  font(body, false, false, 22px)
  height 56px
  min-height: 56px
  padding: 24px 0 0 16px

  transition: all 0.2s ease-out;
  cursor: text;

  +theme('default')
    border-top-left-radius: 5px
    border-top-right-radius: 5px

    color: color-text-dark
    background-color: color-light-blue
    border-bottom: 1px solid color-heavy-blue

  +theme('white')
    border-bottom-color color-white
    color: color-white

 &.error
  border-bottom-color: color-yellow

  &:focus
    border-bottom-color color-yellow


&.filled
  :global(.gem-input-label):before
    font-size: 11px
    font-weight: 700
    transform: translateY(-14px)

    +theme('default')
      color: color-primary-blue

    +theme('white')
      color color-white

.picker
  position: absolute;
  left: 0
  bottom: 0

  z-index: 3
