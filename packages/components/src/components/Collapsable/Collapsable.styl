@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-collapsable
  box-sizing: border-box;

  padding-bottom: 10px
  border-bottom: 1px solid color-heavy-blue

  &-header
    box-sizing: border-box;
    position: relative

    display: flex;
    align-items: center;
    justify-content: space-between;

    user-select: none;
    cursor: pointer;

    height 40px

    font(h2-title)
    color: color-text-dark

 &-arrow
    position absolute
    right: 0
    top: 50%

    path
      fill color-heavy-blue

  &-content
    box-sizing: border-box;
    overflow hidden

