@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

/* DayPicker styles */

.DayPicker
  display: inline-block;
  font(body, false, false, normal)

  &-wrapper
    position: relative;
    box-sizing: border-box;

    flex-direction: row;

    user-select: none;

    padding: 0 20px

  &-Months
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

  &-Month
    display: table;
    border-spacing: 0;
    border-collapse: collapse;
    user-select: none;

  &-NavButton
    position: absolute;
    display: inline-block;

    width: 1em;
    height: 1em;

    top: 26px

    background-position: center;
    background-size: 50%;
    background-repeat: no-repeat;

    color: color-text-heavy-blue;

    cursor: pointer;

    &:hover
      opacity: 0.8;

    &--prev
      left: 20px
      background-image: url('data:image/png;base64,');

    &--next
      right: 20px

      background-image: url('data:image/png;base64,');


    &--interactionDisabled
      display: none;

  &-Caption
    display: table-caption;
    text-align: center;

    > div
      height: 72px
      display: flex;
      align-items: center;
      justify-content: center;
      color: color-text-dark
      font-size: 18px;


  &-Weekdays
    display: table-header-group;
    margin-top: 1em;

    &Row
      display: table-row;


  &-Weekday
    display: table-cell;
    color: color-text-blue;
    background-color: color-light-blue
    font(body-bold, false, 14px, 40px)
    width: 40px
    height: 40px
    text-align: center;

    abbr[title]
      border-bottom: none;
      text-decoration: none;

  &-Body
    display: table-row-group;


  &-Week
    display: table-row;

  &-Day
    display: table-cell;
    width: 40px
    height: 40px
    font-size: 16px;
    vertical-align: middle;
    text-align: center;
    cursor: pointer;

    &--today
      color: color-text-grey;
      font-weight: 700;

    &--outside
      color: #DCE0E0;
      cursor: default;

    &--disabled
      color: #DCE0E0;
      cursor: default;

    &--sunday
      background-color: #F7F8F8;

    &--sunday:not(&--today)
      color: #DCE0E0;

    &--selected:not(&--disabled):not(&--outside)
      position: relative;

      background-color: color-primary-blue;
      color: color-white;

    &--selected:not(&--disabled):not(&--outside):hover
      background-color: color-primary-blue;


  &-WeekNumber
    display: table-cell;
    padding: 0.5em;
    min-width: 1em;
    border-right: 1px solid #EAECEC;
    color: #8B9898;
    vertical-align: middle;
    text-align: right;
    font-size: 0.75em;
    cursor: pointer;

  &--interactionDisabled.DayPicker-Day
      cursor: default;

  &-Footer
    padding-top: 0.5em;

  &-TodayButton
    border: none;
    background-color: transparent;
    background-image: none;
    box-shadow: none;
    color: #4A90E2;
    font-size: 0.875em;
    cursor: pointer;

/* Default modifiers */

/* DayPickerInput */

theme(thm)
  .DayPickerInput-theme-{thm} &
    {block}

.DayPickerInput
  box-sizing: border-box
  display: inline-block;
  position relative
  width: 100%

  &-input
    box-sizing: border-box

    width: 100%
    font(body, false, false, 22px)
    height 56px
    padding: 10px 0 0 16px

    background-color: transparent
    border: none
    outline: 0

    &:-webkit-autofill
      transition: background-color 5000s ease-in-out 0s

      &:hover, &:focus, &:active
        transition: background-color 5000s ease-in-out 0s

    &.DayPickerInput-theme-default
      border-top-left-radius: 5px
      border-top-right-radius: 5px

      color: color-text-dark
      background-color: color-light-blue
      border-bottom: 1px solid color-heavy-blue

      &:focus
        border-bottom-color color-primary-blue

        &::placeholder
          color: #558098;

    &.DayPickerInput-theme-white
      padding-left: 0
      color: color-white
      border-bottom: 1px solid  color-white

      &::placeholder
        color: color-white;

      &:focus
        border-bottom-color:  color-white

    &:focus
      border-bottom-color:  color-primary-blue

    &.DayPickerInput-error
      border-bottom-color: color-yellow

      &:focus
        border-bottom-color: color-yellow


  &-OverlayWrapper
    position: relative;

  &-Overlay
    position: absolute;
    left: 0;
    z-index: 1;

    background: color-white;
    box-shadow: heavy-shadow
    border-radius: 5px;
