@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.gem-checkbox
  display: inline-flex;
  position: relative

  align-items:center

  cursor: pointer
  user-select: none

  &-input
    position: absolute
    opacity: 0
    cursor: pointer

    &:checked~.gem-checkbox-mark
      background-color: color-medium-blue

      &:after
        display: block

  &-mark
    position: relative

    height: 25px
    width: 25px

    min-width: 25px
    min-height: 25px

    margin-right: 15px

    border: 1px solid color-heavy-blue
    border-radius: 5px
    background-color: transparent;

    &:after
      position: absolute
      display: none
      content: ""

      left: 7px
      top: 4px

      width: 6px
      height: 12px

      border: solid color-text-blue
      border-width: 0 4px 4px 0

      -webkit-transform: rotate(45deg)
      -ms-transform: rotate(45deg)
      transform: rotate(45deg)

  &-label
    color: color-text-dark
    font(body)
