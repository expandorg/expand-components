@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/colors'

theme(thm)
  .gem-autocomplete-theme-{thm} &
    {block}

.gem-autocomplete
  position: relative;
  box-sizing: border-box

  &-arrow
    position absolute
    right: 0
    top: calc(28px);

    path
      fill color-heavy-blue

      +theme('white')
        fill color-white

  &-suggestions
    position: absolute;
    box-sizing: border-box;

    left: 0
    right: 0
    top: calc(100% + 3px)
    padding: 0

    z-index: 2
    overflow-y: scroll;
    background-color: color-white
    box-shadow: heavy-shadow


  &-suggestion
    display: block;
    box-sizing: border-box;

    width: 100%;
    height: 50px

    padding: 0 0 0 25px;

    text-align: left;
    font(body-bold, false, false, 50px)

    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

    cursor: pointer;
    color: color-blue-background
    background-color: transparent
    border:  none
    outline: 0;

    &:hover
      background-color: color-medium-blue
