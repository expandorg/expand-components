@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  margin-top: 30px
  display: flex
  align-items: center

.button
  box-sizing: border-box;
  position relative
  background-color: color-blue-background

  padding: 0 20px

  width: auto
  min-width 140px
  height 40px
  line-height: 40px
  margin-right: 50px

  &:hover
    background-color: lighten(color-blue-background, 10%)

