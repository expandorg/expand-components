@import '~@expandorg/uikit/colors'

.text
  margin-top: 20px

  font-size: 16px
  font-weight: 400
  color: color-text-dark

  &.center
    text-align: center;

  &.right
    text-align: right;

  &.h1
    font-size: 36px
    font-weight: 300

  &.h2
    font-size: 24px
    font-weight: 400

  &.h3
    font-size: 18px
    font-weight: 400

  &.h4
    font-size: 16px
    font-weight: 500

  &.title
    font-size: 25px
    font-weight: 600;
    line-height: 1.2

  &.description
    font-size: 20px;
    line-height: 24px;

    &.center
      margin: 25px auto;
      max-width: 800px;

      @media(max-width: 660px)
        margin: 10px auto;
        padding: 0 10px

  &.question
    font-size: 16px
    font-weight: 600
    line-height: 24px;
    color: color-text-blue

  &.blue
    color: color-text-blue
