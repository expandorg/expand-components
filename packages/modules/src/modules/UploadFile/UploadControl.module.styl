@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.placeholder
  text-align: center;

.hint
  path
    fill: color-heavy-blue
.or
  font(small-text)
  color: color-text-primary
  margin-bottom: 10px

.browse
  box-sizing: border-box;
  text-align: center;

  color: color-text-blue
  background-color: color-white;

  font(subtitle, false, false, 38px)
  text-transform: uppercase;

  width: 104px;
  height: 40px;

  border: 1px solid color-heavy-blue;
  border-radius: 2px
