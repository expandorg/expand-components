@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/consts'

.content
  font-size: 20px;
  line-height: 24px;
  max-width: 800px;
  color: color-text-1

  margin: s-margin-big auto;

  @media(max-width: 660px)
    margin: s-margin-medium auto;
    padding: 0 s-margin-medium;

.smallFont
  font-size: 16px
  font-weight: 400

.largeFont
  font-size: 24px
  font-weight: 400

  @media(max-width: 660px)
    font-size: 20px;
