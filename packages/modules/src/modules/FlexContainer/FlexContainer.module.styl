.container
  margin-top: 0

  width: 100%

  display flex
  align-items: center

  > *
    margin-right: 30px
    margin-top: 0

    &:last-child
      margin-right: 0

  &.justify-start
    justify-content: flex-start

  &.justify-end
    justify-content: flex-end

  &.justify-center
    justify-content: center

  &.justify-space-between
    justify-content: space-between

  &.justify-space-around
    justify-content: space-around
