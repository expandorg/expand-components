.richText
  margin-top: 30px

  font-size: 16px
  font-weight: 400

  :global(.align-center)
    text-align: center;

  :global(.align-right)
    text-align: right;

  h1
    font-size: 36px
    font-weight: 300

  h2
    font-size: 24px
    font-weight: 400

  h3
    font-size: 18px
    font-weight: 400

  h4
    font-size: 16px
    font-weight: 500

  ol, ul
    margin: 16px 0 0 1.5em;
    padding: 0
