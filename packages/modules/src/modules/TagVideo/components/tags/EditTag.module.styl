@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;

.field
  margin-right: 30px
  max-width: 200px

  &:last-child
    margin-right: 0

.input
  width: 100%

.actions
  height: 40px
  display: flex;
  align-items: center;
  justify-content: flex-start;

.button
  height 40px
  width: 110px
  line-height: 38px
  border-radius: 2px

  margin-right: 30px

.delete
  box-sizing: border-box;
  cursor: pointer;
  outline: none;
  border: none

  height: 20px
  width: 20px

  background-color: transparent;
  font-size: 15px
  font-weight: 600
  color: color-text-disabled

  &:hover
    color: color-pink
