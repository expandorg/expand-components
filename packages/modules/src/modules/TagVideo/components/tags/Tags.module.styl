@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  width: 100%
  margin-top: 30px
  border-collapse: collapse

.header
  background-color: color-light-blue

.headLabel
  text-align: center
  height 65px
  color: color-text-dark
  font(h3-bold)
  border: 1px solid color-heavy-blue

.cell
  height 50px
  text-align: center
  font(body)
  color: color-text-dark
  border: 1px solid color-heavy-blue

  cursor: pointer

.cellDelete
  cursor: default

.delete
  padding: 3px
  margin: 0

  color: color-text-disabled

  font-weight: 800
  font-size: 16px

  cursor: pointer
  outline: none
  border: 0

  &:hover
    color: color-pink

.first
   &.color-0
    background-color: rgba(102, 167, 239, 0.25)

  &.color-1
    background-color: rgba(251, 188, 5, 0.25)

  &.color-2
    background-color: rgba(115, 0, 230, 0.25);

  &.color-3
    background-color: rgba(0, 56, 255, 0.25)

  &.color-4
    background-color: rgba(101, 230, 0, 0.25)

  &.color-5
    background-color: rgba(230, 69, 0, 0.25)

  &.color-6
    background-color: rgba(0, 230, 230, 0.25)

  &.color-7
    background-color: rgba(134, 0, 0, 0.25)

  &.color-8
    background-color: rgba(52, 168, 147, 0.25)
