@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  width: 100%
  margin-top: 30px
  border-collapse: collapse

.header
  background-color: color-light-blue

.headLabel
  text-align: center
  height 65px
  color: color-text-dark
  font(h3-bold)
  border: 1px solid color-heavy-blue

.cell
  height 50px
  text-align: center
  font(body)
  color: color-text-dark
  border: 1px solid color-heavy-blue

  cursor: pointer

.cellDelete
  cursor: default

.delete
  padding: 3px
  margin: 0

  color: color-text-disabled

  font-weight: 800
  font-size: 16px

  cursor: pointer
  outline: none
  border: 0

  &:hover
    color: color-pink
