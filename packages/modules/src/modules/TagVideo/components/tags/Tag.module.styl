@import '~@gemsorg/uikit/colors'
@import '~@gemsorg/uikit/font'

hovered()
  .container:hover &
    {block}

.container
  box-sizing: border-box;

  display: flex;
  justify-content: flex-start;
  align-items: center;
  cursor: pointer;

  height: 40px
  margin-bottom: 3px


.delete
  box-sizing: border-box;
  cursor: pointer;
  outline: none;

  visibility: hidden;

  height: 20px
  width: 20px

  margin-right: 10px

  background-color: transparent;
  font-size: 15px
  font-weight: 600
  color: color-pink

  &:hover
    color: color-pink-light

  +hovered()
    visibility: visible;

.time
  width: 150px
  margin-right: 10px
  font(font-preset[subheader], false, false, 1)
  color: darken(color-text-gray-1, 30%)
  transform: translateY(1px);

  +hovered()
    color: darken(color-text-gray-1, 10%)

.label
  font(font-preset[menu])
  color: color-text-1

  +hovered()
    color: lighten(color-text-1, 20%)
