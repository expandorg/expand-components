@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 60px

  @media(max-width: 720px)
    padding: 20px

.inner
  width: 600px
  max-width: 600px

.actions
  display: flex;
  align-content: center;
  justify-content: center;

  margin-top: 50px

  > *
    margin: 0 7px

.button
  width: 200px
  display block
  line-height: 58px
  text-decoration: none
