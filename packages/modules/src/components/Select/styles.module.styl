
.container
  width: 100%
  margin: 0 auto;

.cols1
  > *
    width: 100%
    margin-bottom: 12px;

.cols2
  display: flex;
  align-content: stretch;
  flex-wrap: wrap;

  > *
   width: calc(50% - 20px)
   margin-bottom: 20px;
   margin-right: 20px

   @media(max-width: 768px)
     width: 100%;
     margin-right: 0;

.cols3
  display: flex;
  align-content: stretch;
  flex-wrap: wrap;

  > *
   width: calc(33% - 10px)
   margin-bottom: 12px;
   margin-right: 10px

   @media(max-width: 768px)
     width: 100%;
     margin-right: 0;

