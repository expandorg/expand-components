@import '~@expandorg/uikit/colors'

.gem-selectregion
  position: relative;

  &-toggle
    position absolute;
    right: 5px
    top : 5px
    cursor pointer

    .gem-tooltip-orientation-top
      bottom: 35px

    .gem-switch-container
      box-shadow: 0 0 4px 0 color-text-grey;


  &-selection
    position: absolute;
    border: 2px dashed color-pink
    background-color: alpha(color-pink, 0.1);


    &-cliparea
      position: absolute;
      top: 0px
      left: 0
      right: -23px
      bottom: 0
      clip-path: polygon(0 0, 100% 0, 90% 100%, 0 100%)

  &-drag
    box-sizing: border-box;
    position: absolute;

    width: 16px
    height: 16px
    cursor: pointer;

    transform: translate(-8px, -8px);

    &-inner
      box-sizing: border-box;
      position absolute;

      content: ""

      left: 2px
      right: 2px

      width: 12px
      height: 12px

      border-radius: 6px

      background-color: darken(color-pink, 40%)
      border: 1px solid lighten(color-pink-light, 50%)


  &-delete
    position: absolute;
    top: -2px
    right: -20px

    height: 20px
    width: 20px
    line-height: 20px

    font-weight: 600
    font-size: 13px;

    box-sizing: border-box;

    color: color-white
    background: color-pink;

    padding: 0

    outline: 0;
    cursor: pointer;

    visibility: hidden;

    .gem-selectregion-selection:hover &
      visibility: visible;
