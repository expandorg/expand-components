@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  position: absolute;
  top: 0
  bottom: 0

  display: flex;
  align-content: stretch;
  justify-content: space-between;

.range
  flex-grow: 1
  background-color: alpha(color-medium-blue, 0.1)

  cursor: move;

  .color-0 &
    background-color: rgba(102, 167, 239, 0.25)

  .color-1 &
    background-color: rgba(251, 188, 5, 0.25)

  .color-2 &
    background-color: rgba(115, 0, 230, 0.25);

  .color-3 &
    background-color: rgba(0, 56, 255, 0.25)

  .color-4 &
    background-color: rgba(101, 230, 0, 0.25)

  .color-5 &
    background-color: rgba(230, 69, 0, 0.25)

  .color-6 &
    background-color: rgba(0, 230, 230, 0.25)

  .color-7 &
    background-color: rgba(134, 0, 0, 0.25)

  .color-8 &
    background-color: rgba(52, 168, 147, 0.25)


.start
.end
  width: 2px
  background-color: color-blue-transparent
  position relative

  .color-0 &
    background-color: rgb(102, 167, 239)
    opacity: 0.5;

  .color-1 &
    background-color: #FBBC05;
    opacity: 0.5;

  .color-2 &
    background-color: #7300E6;
    opacity: 0.5;

  .color-3 &
    background-color: rgba(0, 56, 255, 0.5)

  .color-4 &
    background-color: #65E600
    opacity: 0.5;

  .color-5 &
    background-color: rgba(230, 69, 0, 0.5)

  .color-6 &
    background-color: rgba(0, 230, 230, 0.5)

  .color-7 &
    background-color: rgba(134, 0, 0, 0.5)

  .color-8 &
    background-color: #34A893
    opacity: 0.5;
