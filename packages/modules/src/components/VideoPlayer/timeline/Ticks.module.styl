@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  position: relative;

  width: 100%;
  height: 100%;

  overflow-x: hidden;
  user-select: none;

.tick
  position: absolute;
  bottom: 0
  top: 0

  display: flex;
  align-items: center;
  justify-content: center;

  font(body)
  transform: translateX(-50%);
  color: color-text-dark

  user-select:none;

  &:after
    position: absolute;
    bottom: 0
    left: 50%

    content: ' '
    width: 1px
    height: 3px
    background-color: transparent
