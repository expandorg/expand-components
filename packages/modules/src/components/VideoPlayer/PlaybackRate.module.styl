@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  position: relative;

.button
  box-sizing: border-box;

  height: 50px
  width: 50px
  font(h4-bold, false, false, 48px)

  display: flex;
  align-items: center;
  justify-content: center;

  background-color: color-light-blue
  color: color-primary-blue
  border-radius: 2px
  border: 1px solid color-heavy-blue

  cursor: pointer;
  outline: none

  &:hover
    background-color: color-primary-blue
    color: color-light-blue

.menu
  position: absolute;
  bottom: calc(100% - 1px)
  border-radius: 2px

.rate
  box-sizing: border-box;

  height: 50px
  width: 50px
  font(h4-bold, false, false, 48px)

  display: flex;
  align-items: center;
  justify-content: center;

  background-color: color-light-blue
  color: color-primary-blue
  border: 1px solid color-heavy-blue

  cursor: pointer;
  outline: none

  &:hover
    background-color: color-heavy-blue
    color: color-light-blue

