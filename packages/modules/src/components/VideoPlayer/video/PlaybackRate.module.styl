@import '~@gemsorg/uikit/colors'
@import '~@gemsorg/uikit/font'

.container
  position: relative;

.button
  box-sizing: border-box;

  height: 38px
  width: 38px
  font(normal, 600, false, 38px)

  display: flex;
  align-items: center;
  justify-content: center;

  background-color: color-pink
  color: color-white
  border-radius: 2px

  cursor: pointer;
  outline: none

  &:hover
    background-color: color-pink-light

.menu
  position: absolute;
  bottom: calc(100% + 5px)
  border-radius: 2px

.rate
  box-sizing: border-box;

  height: 38px
  width: 38px
  font(normal, 600, false, 38px)

  display: flex;
  align-items: center;
  justify-content: center;

  background-color: color-pink
  color: color-white

  cursor: pointer;
  outline: none

  &:hover
    background-color: color-pink-light
