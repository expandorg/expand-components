@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.video
  min-width 300px
  position relative

.timeline
  margin-top: 10px

  display: flex;
  width: 100%
  align-items: center;
  justify-content: space-between;

.actions
  display: flex;
  align-items: center;
  justify-content: flex-start
  padding-right: 15px

  > *
    margin-right: 15px

    &:last-child
      margin-right: 0
