@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.content
  position relative

.player
  position: absolute
  left: 0
  top: 0
  width: 0
  height: 0

.timeline
  margin-top: 10px

  display: flex;
  width: 100%
  align-items: center;
  justify-content: space-between;

.timelineContainer
  box-sizing: border-box;
  position: relative;
  width: 100%;
  flex-grow: 1

.actions
  display: flex;
  align-items: center;
  justify-content: flex-start
  padding-right: 15px

  > *
    margin-right: 15px

    &:last-child
      margin-right: 0
