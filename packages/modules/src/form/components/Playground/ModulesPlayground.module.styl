@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'
@import '~@expandorg/uikit/size'

.container
  box-sizing: border-box
  padding: 30px
  background-color: color-light-blue


  @media(max-width: breakpoint-mobile-sm)
    padding: 0

.panel
  box-sizing: border-box
  padding: 15px 30px 30px 30px
  position relative

  max-width 1100px
  margin: 0 auto

  background: color-white
  box-shadow: light-shadow

.title
  position absolute
  left 0
  top -20px
  font(h4-bold)

.empty
  font(body)
  text-align: center
  margin: 10px 0
  color: color-text-grey

.toggle
  position absolute
  top: 5px
  right 5px

  font(subtitle)
  letter-spacing: 0.1em
  padding: 2px 5px
  outline: 0
  cursor pointer

.src
  margin-top: 15px
  font-size: 12px
  overflow: scroll
  max-height: 400px
  background-color: #282a36
  color: color-white
