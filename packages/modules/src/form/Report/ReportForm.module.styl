@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'


.label
  font(body)
  color: color-text-grey
  margin-bottom: 10px

.textarea
  box-sizing: content-box

  font(body, false, false, normal)
  width: 100%

  padding: 0 15px 8px 0

  background-color: transparent
  color: color-blue-background
  border: 1px solid  color-heavy-blue

  transition: all 0.2s ease-out;

  outline: none;
