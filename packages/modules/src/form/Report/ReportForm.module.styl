@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 140px

  text-align: center;

  @media(max-width: 720px)
    padding: 20px

.inner
  width: 440px
  max-width: 440px
  margin: 0 auto;

.title
  box-sizing: border-box;

  font(h1, false, false, 1)
  color: color-text-dark

  margin: 0 -45px

.field
  position: relative;
  margin-top: 32px
  text-align: left;

.label
  font(body)
  color: color-text-grey

.textarea
  box-sizing: content-box

  font(body, false, false, normal)
  width: 100%

  padding: 0 15px 8px 0

  background-color: transparent
  color: color-blue-background
  border: 1px solid transparent
  border-bottom: 2px solid  color-heavy-blue

  transition: all 0.2s ease-out;

  outline: none;



.error
  position: absolute;
  top: calc(100% + 15px)
  left: 0
  right: 0
  text-align: center;


.actions
  display: flex;
  align-content: center;
  justify-content: center;

  margin-top: 50px

  > *
    margin: 0 7px

.button
  width: 200px
