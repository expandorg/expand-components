@import '../../uikit/colors';
@import '../../uikit/font'

.gem-dialog
  &-overlay
    position: fixed;
    top 0
    left 0
    right 0
    bottom 0

    display: flex;
    align-items: center;
    justify-content: center;

    background: rgba(11, 19, 43, 0.8)

    opacity: 1
    z-index: 3

    @media(max-width: 660px)
      align-items: stretch;

  &-modal
    position: relative;
    box-sizing: border-box;

    box-shadow: 0 0 22px 0 rgba(74, 73, 74, 0.22);
    border-radius: 4px;
    background-color: color-white
    overflow-y: auto;
    outline: none

    @media(max-width: 660px)
      width: 100%

  &-close
    position: absolute;
    top 23px
    right 23px
    width 16px
    height 16px
    line-height: 16px
    font-size: 14px

    border-radius: 0
    background: none
    color: #cacaca
    outline: none;
    cursor: pointer;

    &:hover
      color: darken(#cacaca, 20%);

  &-headline
    box-sizing: border-box;
    padding-left: 24px

    height: 80px
    font(font-preset[headline], false, false, 80px)

    box-shadow: inset 0 -1px 0 0 color-grey
