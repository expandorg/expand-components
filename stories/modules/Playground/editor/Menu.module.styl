@import '../../../../src/uikit/colors'
@import '../../../../src/uikit/font'

.container
  position: absolute;
  right: 0
  top: 45px

  z-index: 2

  box-sizing: border-box
  padding: 10px 0

  color: color-blue
  background-color: color-white

  border-radius: 3px
  box-shadow: 0 6px 6px 0 rgba(0, 0, 0, 0.24), 0 0 6px 0 rgba(0, 0, 0, 0.12)

.item
  list-style: none;

.button
  display: block;
  box-sizing: border-box;

  width: 100%;
  height: 100%;
  border: 0
  padding: 0
  margin: 0

  padding: 0 15px

  font(font-preset[subheader], false, false, 30px)

  text-transform:capitalize;
  text-align: left;

  color: color-blue
  background-color: transparent;

  cursor: pointer;
  outline: none;

  &:hover
    color: lighten(color-blue, 20%)
    background-color: lighten(color-grey, 60%)
