@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  position: absolute;
  top: 0
  bottom: 0

  display: flex;
  align-content: stretch;
  justify-content: space-between;

.start
.end
  width: 2px
  background-color: alpha(color-pink, 0.8)
  position relative

  cursor: col-resize;

  :global(.gem-tooltip-orientation-top)
    bottom: 65px


.range
  flex-grow: 1
  background-color: alpha(color-pink, 0.3)

  cursor: move;

  &:hover
    background-color: alpha(color-pink, 0.4)
